<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_get_started_gradient">

    <!-- Status Bar -->
    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:text="Welcome to PlantApp"
        android:textColor="#13231B"
        android:textSize="28sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:text="Identify more than 3000+ plants and 88% accuracy."
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"/>

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="375dp"
        android:layout_height="499dp"
        android:src="@drawable/plant_illustration"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="-7dp"
        app:layout_constraintEnd_toEndOf="parent"  />

    <!-- Get Started Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBtn"
        android:layout_width="320dp"
        android:layout_height="56dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/primaryGreen"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/get_started"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Terms Text -->
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:fontFamily="@font/roboto_regular"
        android:lineSpacingExtra="2dp"
        android:text="@string/terms_info"
        android:textAlignment="center"
        android:textColor="#597165B2"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBtn"
        app:layout_constraintVertical_bias="0.247" />
</androidx.constraintlayout.widget.ConstraintLayout>