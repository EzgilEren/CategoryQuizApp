<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/getStartedFragment">

    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.ezgieren.plantidentifyapp.ui.start.GetStartedFragment"
        android:label="Get Started">
        <action
            android:id="@+id/action_getStarted_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.ezgieren.plantidentifyapp.ui.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_category"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.ezgieren.plantidentifyapp.ui.category.CategoryFragment"
        android:label="Categories">
        <action
            android:id="@+id/action_categoryFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <fragment
        android:id="@+id/questionFragment"
        android:name="com.ezgieren.plantidentifyapp.ui.question.QuestionFragment"
        android:label="Questions">
        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="0"
            app:nullable="false"/>
    </fragment>
</navigation>